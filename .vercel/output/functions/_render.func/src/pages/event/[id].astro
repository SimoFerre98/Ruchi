---
import Layout from '../../layouts/Layout.astro';
import EventView from '../../components/EventView';

const { id } = Astro.params;
---

<Layout title={`Evento ${id}`}>
	<div class="max-w-4xl mx-auto p-4">
        <a href="/dashboard" class="text-indigo-600 hover:underline mb-4 inline-block">&larr; Torna alla Dashboard</a>
		<header class="mb-8">
			<h1 class="text-3xl font-bold mb-2">Dettaglio Evento</h1>
            <p class="text-gray-500">ID: {id}</p>
		</header>

        <div class="mt-6">
            <EventView client:load eventId={id || ''} />
        </div>
	</div>
</Layout>
